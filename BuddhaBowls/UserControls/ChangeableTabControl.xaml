<UserControl x:Class="BuddhaBowls.UserControls.ChangeableTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BuddhaBowls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="{Binding Header}" Grid.Row="0" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"
               Margin="0, 5" />
        <Button x:Name="button1" Content="{Binding PrimaryPageName}" HorizontalAlignment="Center" Margin="-100,10,0,0" Grid.Row="0"
                VerticalAlignment="Bottom" Width="100" Command="{Binding PrimaryCommand}"/>
        <Button x:Name="button2" Content="{Binding SecondaryPageName}" HorizontalAlignment="Center" Margin="100,10,0,0" Grid.Row="0"
                VerticalAlignment="Bottom" Width="100" Command="{Binding SecondaryCommand}"/>
        <ContentControl Content="{Binding TabControl}" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
