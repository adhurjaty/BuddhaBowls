<UserControl x:Class="BuddhaBowls.UserControls.CogsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BuddhaBowls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="180" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:PeriodSelectorControl Grid.Row="0" DataContext="{Binding PeriodSelector}" VerticalAlignment="Center" Margin="0,2,0,2"/>
        <Border Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" />
        <DataGrid x:Name="dataGrid" Grid.Row="1" ItemsSource="{Binding CategoryList}" HorizontalAlignment="Stretch" Panel.ZIndex="0"
                  VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" CanUserReorderColumns="False"
                  AutoGenerateColumns="False" CanUserSortColumns="False" CanUserAddRows="False" SelectedItem="{Binding SelectedCogs}"
                  Margin="1, 1, 1, 1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category" Binding="{Binding Name}" Width="2*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Start Inv" Binding="{Binding Path=StartInv, Mode=OneWay, StringFormat=c}" Width="1*" />
                <DataGridTextColumn Header="Rec Purchases" Binding="{Binding Path=Purchases, Mode=OneWay, StringFormat=c}" Width="1*" />
                <DataGridTextColumn Header="End Inv" Binding="{Binding Path=EndInv, Mode=OneWay, StringFormat=c}" Width="1*" />
                <DataGridTextColumn Header="COGS Cost" Binding="{Binding Path=CogsCost, StringFormat=c}" IsReadOnly="True" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2" Visibility="{Binding CogInfoVisibility}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button Content="Start Inventory" Grid.Column="0" Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="18" Command="{Binding StartInvCommand}" />
            <DataGrid Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding StartInv}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" CanUserAddRows="False" Margin="-1,0,1,0"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="80" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Ending Inventory" Grid.Column="1" Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="18" Command="{Binding EndInvCommand}" />
            <DataGrid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding EndingInv}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" CanUserAddRows="False" Margin="-1,0,1,0"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="80" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="Received Purchases" Grid.Column="2" Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="18" />
            <DataGrid Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding RecOrders}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" CanUserAddRows="False" Margin="-1,0,1,0"
                      IsReadOnly="True" SelectedItem="{Binding SelectedOrder}" MouseDoubleClick="recOrders_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PO #" Binding="{Binding Id}" Width="50" />
                    <DataGridTextColumn Header="Rec Date" Binding="{Binding Path=ReceivedDate, StringFormat={}{0:MM/dd/yy}}" Width="2*" />
                    <DataGridTextColumn Header="Cost" Binding="{Binding Path=TotalCost, StringFormat=c}" Width="1*" />
                </DataGrid.Columns>
            </DataGrid>
            <ScrollViewer Grid.Column="3" Grid.RowSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto" Visibility="{Binding OrderDetailsVisibility}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Total Cost:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                           Margin="0, 0, 5, 0" />
                    <TextBlock Text="{Binding Path=SelectedTotalCost, StringFormat=c}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                    <Label Content="Total Food Cost:" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Margin="0, 0, 5, 0" />
                    <TextBlock Text="{Binding Path=SelectedTotalFoodCost, StringFormat=c}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                    <Label Content="Total Category Cost:" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Margin="0, 0, 5, 0" />
                    <TextBlock Text="{Binding Path=SelectedTotalCategoryCost, StringFormat=c}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left"
                               VerticalAlignment="Center" />
                    <Label Content="Ordered Date:" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" 
                           Margin="0, 0, 5, 0" />
                    <TextBlock Text="{Binding Path=SelectedOrderedDate, StringFormat='{}{0:MM/dd/yyyy}'}" Grid.Column="1" Grid.Row="3"
                               HorizontalAlignment="Left" VerticalAlignment="Center" />

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
