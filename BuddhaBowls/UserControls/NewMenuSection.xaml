<UserControl x:Class="BuddhaBowls.UserControls.NewMenuSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BuddhaBowls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Label x:Name="label8" Content="Price" HorizontalAlignment="Right" Margin="25,0,0,0" Grid.Column="0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox8" HorizontalAlignment="Left" Height="23" Margin="10,0,0,0" Grid.Column="1" TextWrapping="Wrap"
                        Text="{Binding Path=Price, StringFormat=c}" VerticalAlignment="Top" Width="120"/>
    </Grid>
</UserControl>
